<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="figo.companion.StatsFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:text="Dano aparente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_weight="1" />
            </LinearLayout>


            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="200dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Atributos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:layout_gravity="center" />

                <TextView
                    android:text="(rolar novos valores)"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textViewNewAtt"
                    android:textColor="#BDBDBD"
                    android:onClick="rollAttributes"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="43dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/icon_dice"
                    android:id="@+id/imageView7"
                    android:tint="@color/colorPrimary" />


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05"
                    android:id="@+id/STRDEX">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/icon_str"
                            android:id="@+id/imageView3"
                            android:tint="@color/colorPrimary"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:layout_marginRight="10dp" />

                        <TextView
                            android:text="STR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView9"
                            android:layout_weight="0" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="1"
                            android:id="@+id/editTextSTR"
                            android:layout_weight="1"
                            android:gravity="center"/>

                        <TextView
                            android:text="+0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewStrMod"
                            android:layout_weight="0" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/icon_dex"
                            android:id="@+id/imageView1121"
                            android:tint="@color/colorPrimary"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:layout_marginRight="10dp" />

                        <TextView
                            android:text="DEX"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView12"
                            android:layout_weight="0" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="1"
                            android:id="@+id/editTextDEX"
                            android:layout_weight="1"
                            android:gravity="center"/>

                        <TextView
                            android:text="+0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewDexMod"
                            android:layout_weight="0" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/CONINT"
                    android:layout_weight="0.05">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/icon_con"
                            android:id="@+id/imageView5"
                            android:layout_gravity="center"
                            android:tint="@color/colorPrimary"
                            android:layout_weight="0"
                            android:layout_marginRight="10dp" />

                        <TextView
                            android:text="CON"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView14"
                            android:layout_weight="0" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="1"
                            android:id="@+id/editTextCON"
                            android:gravity="center"
                            android:layout_weight="1" />

                        <TextView
                            android:text="+0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewConMod"
                            android:layout_weight="0"
                            android:gravity="right"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/icon_int"
                            android:id="@+id/imageView4"
                            android:tint="@color/colorPrimary"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:layout_marginRight="10dp" />

                        <TextView
                            android:text="INT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView15"
                            android:layout_weight="0" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="1"
                            android:id="@+id/editTextINT"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:gravity="center"/>

                        <TextView
                            android:text="+0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewIntMod"
                            android:layout_weight="0" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/WISCHA"
                    android:layout_weight="0.05">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/icon_wis"
                            android:id="@+id/imageView111"
                            android:tint="@color/colorPrimary"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:layout_marginRight="10dp" />

                        <TextView
                            android:text="WIS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView18"
                            android:layout_weight="0" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="1"
                            android:id="@+id/editTextWIS"
                            android:layout_weight="1"
                            android:gravity="center"/>

                        <TextView
                            android:text="+0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewWisMod"
                            android:layout_weight="0" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="5dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/icon_cha"
                            android:id="@+id/imageView1141"
                            android:tint="@color/colorPrimary"
                            android:layout_gravity="center"
                            android:layout_weight="0"
                            android:layout_marginRight="10dp" />

                        <TextView
                            android:text="CHA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView19"
                            android:layout_weight="0" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:ems="1"
                            android:id="@+id/editTextCHA"
                            android:layout_weight="1"
                            android:gravity="center"/>

                        <TextView
                            android:text="+0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewChaMod"
                            android:layout_weight="0" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
